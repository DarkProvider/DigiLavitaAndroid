<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragments.ProfileFragment"
	android:background="@drawable/ic_mainmenu6"
	android:scaleType="centerCrop"
	android:id="@+id/profileFragment">





	<com.github.florent37.shapeofview.shapes.DiagonalView
		android:layout_width="match_parent"
		android:layout_height="270dp"
		app:shape_diagonal_angle="10"
		app:shape_diagonal_direction="left"
		app:shape_diagonal_position="bottom"
		tools:ignore="MissingConstraints"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:id="@+id/diagonalView">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/restaurant1"
			android:scaleType="centerCrop" />

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#50B60609" />

	</com.github.florent37.shapeofview.shapes.DiagonalView>


	<com.github.florent37.shapeofview.shapes.CircleView
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:elevation="4dp"
		app:shape_circle_borderColor="@android:color/white"
		app:shape_circle_borderWidth="2dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintHorizontal_bias="0.06"
		app:layout_constraintVertical_bias="0.25">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:background="@drawable/user"
			android:id="@+id/userpic" />

	</com.github.florent37.shapeofview.shapes.CircleView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="@+id/diagonalView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:paddingTop="30dp">

		<ImageView
			android:layout_alignParentEnd="true"
			android:layout_width="38dp"
			android:layout_height="38dp"
			android:background="@drawable/ic_notification"
			android:clickable="true"
			android:focusable="true"
			android:id="@+id/notification"
			android:foreground="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="@string/notification_bell"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="20dp"/>

		<com.github.florent37.shapeofview.shapes.RoundRectView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:shape_roundRect_bottomLeftRadius="10dp"
			app:shape_roundRect_bottomRightRadius="10dp"
			app:shape_roundRect_topLeftRadius="10dp"
			app:shape_roundRect_topRightRadius="10dp"
			app:shape_roundRect_borderColor="@android:color/white"
			app:shape_roundRect_borderWidth="2dp"
			android:layout_marginStart="20dp"
			>

			<TextView
				android:layout_width="300dp"
				android:layout_height="wrap_content"
				android:textSize="34sp"
				android:textAlignment="center"
				android:text="@string/john_doe"
				android:id="@+id/username"
				android:elevation="5dp"
				android:textColor="@android:color/white"
				android:paddingEnd="5dp"
				android:paddingStart="5dp"/>

		</com.github.florent37.shapeofview.shapes.RoundRectView>
	</RelativeLayout>

	<com.github.florent37.shapeofview.shapes.RoundRectView
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:elevation="2dp"
		app:shape_roundRect_bottomLeftRadius="10dp"
		app:shape_roundRect_bottomRightRadius="10dp"
		app:shape_roundRect_topLeftRadius="10dp"
		app:shape_roundRect_topRightRadius="10dp"
		app:shape_roundRect_borderColor="#B60609"
		app:shape_roundRect_borderWidth="3dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		android:layout_marginBottom="100dp"
		android:clickable="true"
		android:focusable="true"
		android:foreground="?attr/selectableItemBackgroundBorderless">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:text="Uitloggen"
			android:textSize="30dp"
			android:textColor="#B60609"
			android:textAlignment="center"/>

	</com.github.florent37.shapeofview.shapes.RoundRectView>



</androidx.constraintlayout.widget.ConstraintLayout>



