<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/backgound_color">


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/imageView"
		android:src="@drawable/ic_digilavitasvg1"
		android:scaleType="centerCrop"
		app:layout_constraintEnd_toEndOf="parent"
		tools:layout_editor_absoluteY="0dp"
		android:contentDescription="@string/background" />

	<EditText
		android:layout_width="320dp"
		android:layout_height="50dp"
		android:inputType="textPersonName"
		android:drawableStart="@drawable/custom_confirm_icon"
		android:drawablePadding="10dp"
		android:background="@drawable/custom_input"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:ems="10"
		android:id="@+id/codeFilling"
		android:hint="@string/code_invullen"
		android:textColor="#000000"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="@+id/imageView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:autofillHints="Code invullen" />

	<Button
		android:text="@string/bevestigen"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:id="@+id/confirmFilling"
		android:backgroundTint="#B60609"
		android:textColor="#FFFFFF"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/imageView"
		app:layout_constraintHorizontal_bias="0.503"
		app:layout_constraintVertical_bias="0.597" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.044">

		<com.github.florent37.shapeofview.shapes.CircleView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:elevation="4dp"
			android:layout_alignParentEnd="true"
			app:shape_roundRect_bottomLeftRadius="10dp"
			app:shape_roundRect_bottomRightRadius="10dp"
			app:shape_roundRect_topLeftRadius="10dp"
			app:shape_roundRect_topRightRadius="10dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.966"
			app:layout_constraintVertical_bias="0.001"
			android:layout_margin="15dp">


			<ImageView
				android:id="@+id/logo2"
				android:src="@drawable/logo"
				android:scaleType="centerCrop"
				android:layout_width="120dp"
				android:layout_height="120dp"
				tools:layout_editor_absoluteY="91dp"
				tools:layout_editor_absoluteX="80dp"
				android:contentDescription="@string/logo" />
		</com.github.florent37.shapeofview.shapes.CircleView>

		<com.github.florent37.shapeofview.shapes.RoundRectView
			android:layout_width="240dp"
			android:layout_height="115dp"
			android:elevation="1dp"
			app:shape_roundRect_bottomLeftRadius="10dp"
			app:shape_roundRect_bottomRightRadius="10dp"
			app:shape_roundRect_topLeftRadius="10dp"
			app:shape_roundRect_topRightRadius="10dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_alignParentStart="true"
			app:layout_constraintHorizontal_bias="0.06"
			app:layout_constraintVertical_bias="0.001"
			android:layout_margin="15dp">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#30000000"
				android:contentDescription="@string/banner" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fontFamily="@font/brush"
				android:text="@string/la_vita_e_bella_e_waiter"
				android:textSize="35sp"
				android:textAlignment="textStart"
				android:layout_margin="15dp"
				android:textColor="@android:color/white" />


		</com.github.florent37.shapeofview.shapes.RoundRectView>
	</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
